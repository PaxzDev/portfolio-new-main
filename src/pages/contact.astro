---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

---

<Layout title="Contact - paxzdev.xyz">
	<main class="flex items-center justify-center h-screen bg-gradient-to-t from-slate-900 to-blue-950">
	  <div class="text-center">
		<h1 class="text-white font-semibold text-3xl m-10	">
		 For any inquiries.
		</h1>
		


		<div class="bg-gradient-to-t from-gray-300 to-white max-w-xl mx-auto p-8 border rounded">
			<form action="#" class="space-y-8">
				<div>
					<label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300 text-left">First name</label>
					<input type="text" id="name" class="w-full md:w-96 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="John" required>
				</div>
				<div>
					<label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300 text-left">Email</label>
					<input type="email" id="email" class="w-full md:w-96 block p-3 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="email@paxzdev.xyz" required>
				</div>
				<div class="sm:col-span-2">
					<label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400 text-left">Your message</label>
					<textarea id="message" rows="6" class="w-full md:w-96 block p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Leave a comment..."></textarea>
				</div>
				<button type="submit" class="m-3 inline-block rounded border bg-gradient-to-r from-blue-600 via-blue-500 to-blue-400 px-12 py-3 text-sm font-semibold text-white">Send message</button>
			</form>
		</div>

		<p class="m-3 animate-pulse text-white">Currently broken, reach me <br> at <span class="underline">paxzgotbanned123@gmail.com</span> or discord: <span class="underline">paxzdev</span></p>

		
	  </div>
	</main>
  </Layout>
  