---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

---

<Layout title="Contact - paxzdev.xyz">


	<header class="bg-transparent">
		<div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
		  <div class="flex h-16 items-center justify-between">
			<div class="md:flex md:items-center md:gap-12">

			</div>
	  
			<div class="hidden md:block">
			  <nav aria-label="Global">
				<ul class="flex items-center gap-6 text-sm">
				  <li>
					<a class="text-gray-700 font-semibold transition hover:text-gray-500/75" href="/"> Home </a>
				  </li>
	  
				  <li>
					<a class="text-gray-700 font-semibold transition hover:text-gray-500/75" href="/About"> About </a>
				  </li>
	  
				  <li>
					<a class="text-gray-700 font-semibold transition hover:text-gray-500/75" href="/Projects"> Projects </a>
				  </li>
	  
				  <li>
					<a class="text-gray-700 font-semibold transition hover:text-gray-500/75" href="/contact"> Contact </a>
				  </li>
	  
			  </nav>
			</div>
	  
			<div class="flex items-center gap-4">
			  <div class="sm:flex sm:gap-4">

	  
				<div class="hidden sm:flex">

				</div>
			  </div>
	  
			 
			</div>
		  </div>
		</div>
	  </header>









	<main class="flex items-center justify-center h-screen bg-gradient-to-t from-slate-900 to-blue-950">
	  <div class="text-center">
		<h1 class="text-white font-semibold text-3xl m-10	">
		 For any inquiries.
		</h1>
		


		<div class="bg-gradient-to-t from-gray-300 to-white max-w-xl mx-auto p-8 border rounded">
			<form action="#" class="space-y-8">
				<div>
					<label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300 text-left">First name</label>
					<input type="text" id="name" class="w-full md:w-96 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="John" required>
				</div>
				<div>
					<label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300 text-left">Email</label>
					<input type="email" id="email" class="w-full md:w-96 block p-3 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="email@paxzdev.xyz" required>
				</div>
				<div class="sm:col-span-2">
					<label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400 text-left">Your message</label>
					<textarea id="message" rows="6" class="w-full md:w-96 block p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Leave a comment..."></textarea>
				</div>
				<button type="submit" class="m-3 inline-block rounded border bg-gradient-to-r from-blue-600 via-blue-500 to-blue-400 px-12 py-3 text-sm font-semibold text-white">Send message</button>
			</form>
		</div>

		<p class="m-3 animate-pulse text-white">Currently broken, reach me <br> at <span class="underline">paxzgotbanned123@gmail.com</span> or discord: <span class="underline">paxzdev</span></p>

		
	  </div>
	</main>

	<footer class="bg-gray-100">
		<div class="relative mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 lg:pt-24">
		  <div class="absolute end-4 top-4 sm:end-6 sm:top-6 lg:end-8 lg:top-8">
			<a
			  class="inline-block rounded-full bg-gradient-to-r from-blue-600 via-blue-500 to-blue-400 p-2 text-white shadow transition hover:bg-teal-500 sm:p-3 lg:p-4"
			  href="#Main"
			>
			  <span class="sr-only">Back to top</span>
	  
			  <svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-5 w-5"
				viewBox="0 0 20 20"
				fill="currentColor"
			  >
				<path
				  fill-rule="evenodd"
				  d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
				  clip-rule="evenodd"
				/>
			  </svg>
			</a>
		  </div>
	  
		  <div class="lg:flex lg:items-end lg:justify-between">
			<div>
			  <div class="flex justify-center:justify-start">
				<h1 class="font-bold bg-gradient-to-r from-blue-600 via-blue-500 to-blue-400 inline-block text-transparent bg-clip-text ">paxzdev.xyz</h1>
			  </div>
	  
			  <p class="mx-auto mt-6 max-w-md text-center leading-relaxed text-gray-500 lg:text-left">
				As of 12/23/2023 I am busy with another project, but do not hesitate to contact me for future job inquiries.
			  </p>
			</div>
	  
			<ul
			  class="mt-12 flex flex-wrap justify-center gap-6 md:gap-8 lg:mt-0 lg:justify-end lg:gap-12"
			>
			  <li>
				<a class="text-gray-700 transition hover:text-gray-700/75" href="/About"> About </a>
			  </li>
	  
			  <li>
				<a class="text-gray-700 transition hover:text-gray-700/75" href="/Projects"> Projects </a>
			  </li>
	  
			  <li>
				<a class="text-gray-700 transition hover:text-gray-700/75" href="/contact"> Contact </a>
			  </li>
	  
			  <li>
				<a class="text-gray-700 transition hover:text-gray-700/75" href="/Features"> Why choose me </a>
			  </li>
			</ul>
		  </div>
	  

		</div>
	  </footer>
</Layout>
  